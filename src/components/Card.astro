---
import { Icon } from "astro-icon";
export interface Props {
	title: string;
	body: string;
	href: string;
	color: string;
	iconName: string;
}

const { href, title, body, color, iconName } = Astro.props;
let styleString = `color:${color}`;
---

<li class="link-card">
	<a href={href}>
		<heading class="inline-heading">
			<Icon style={`color:${color}`} name={iconName} />
				<h2 style={styleString}>
				{title}
				</h2>
		</heading>
			<p>
				<i>
					{body}
				</i>
			</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0.15 rem;
		background-color: white;
		background-image: var(--accent-gradient);
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
			0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}

	.heading{
		display:inline-block;
		float:right;
	}
	[astro-icon] {
		height: 1.75rem;
		width: 1.75rem;
		float: left;
		margin-right: 0.75rem;
		margin-bottom: 0.5rem;
		margin-top: 0.5rem;

	}


	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.2;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		color: #111;
		background-color: white;
		opacity: 0.8;
	}
	h2 {
		/* margin: 0; */
		font-size: 1.25rem;
		font-weight: 500;
		margin-left: 5px;

	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
	}
</style>
