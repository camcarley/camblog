---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import SocialMediaInfo, { SocialMedia } from "../utils/socialMedia";
import Routes, { Route } from "../utils/routes";
import { Icon } from "astro-icon";

const infoCards: Array<SocialMedia> = SocialMediaInfo;
const title = "Cameron Carley";
---

<Layout title={title}>
	<main>
		<span class="center-text">
			<h1>
				My name is <span class="text-gradient">{title}.</span>
			</h1>
			<h2>Welcome to my humble abodeðŸ‘‹</h2>
		</span>
		<picture class="center">
			<source type="image/webp" srcset="profile.webp" />
			<img class="round-img" src="profile.webp" />
		</picture>
		<div class="pill-nav">
			{
				Routes.length ? (
					Routes.map((route: Route) => {
						return (
							<a href={route.path}
								aria-label={route.ariaLabel}
							>
								<Icon
									class="text-gradient pill-icon"
									name={route.iconName}
								/>
								{route.navTitle}
							</a>
						);
					})
				) : (
					<p>There are no routes for this website</p>
				)
			}
		</div>
		<ul role="list" class="link-card-grid">
			{
				infoCards.length ? (
					infoCards.map((card) => {
						return (
							<Card
								color={card.color}
								href={card.href}
								title={card.title}
								body={card.body}
								iconName={card.iconName}
							/>
						);
					})
				) : (
					<div>"Hi"</div>
				)
			}
		</ul>
	</main>
</Layout>

<style>
	.center-text {
		text-align: center;
	}
	main {
		margin: auto;
		margin-top: 3rem;
		padding: 1.5rem;
		max-width: 70ch;
		background-color: rgba(12, 30, 45, 0.7);
		backdrop-filter: blur(10px);
		border-radius: 2rem;
		border-width: 0.3rem;
		border-color: rgba(12, 30, 45, 0.3);
	}
	.main-card-list {
		max-width: 50ch;
	}

	h1 {
		margin-left: 1rem;
		font-size: 2rem;
		font-weight: 800;
		margin: 0;
		color: azure;
	}

	h2 {
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: 2rem;
		color: azure;
	}

	.pill-nav a {
		color: lightgray;
		margin-bottom: 1.5rem;
		padding: 5px;
		margin-right: 3px;
		font-size: 15px;
		border-radius: 50px;
		background-color: rgba(36, 93, 125, 0.207);
		backdrop-filter: blur(1px);
		border-width: 0.2rem;
		border-color: rgba(12, 30, 45, 0.3);
	}

	/* Change the color of links on mouse-over */
	.pill-nav a:hover {
		color: lightgray;
		background-color: rgba(52, 149, 205, 0.41);
		backdrop-filter: blur(1px);
		border-width: 0.2rem;
		border-color: rgba(12, 30, 45, 0.205);
	}

	/* Add a color to the active/current link */
	.pill-nav a.active {
		color: lightgray;
	}

	.pill-icon {
		height: 15px;
		width: 15px;
		float: left;
		margin-top: 3px;
		margin-right: 7px;
	}

	.center {
		display: block;
		margin-left: auto;
		margin-right: auto;
		width: 35%;
	}

	.pill-nav {
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.round-img {
		border-radius: 50%;
		margin-bottom: 1.5rem;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
</style>
